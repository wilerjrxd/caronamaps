<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_item_listview"
    android:orientation="horizontal"
    android:id="@+id/caronas_adapter_layout"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:weightSum="100">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImagePerfil"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="60"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nomeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:gravity="center"
            android:text="Nome"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/partidaDestinoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CAP > HortÃ£o"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vagasList"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="4 vagas"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/horarioList"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="14:15h"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="6dp" />

    </LinearLayout>

</LinearLayout>