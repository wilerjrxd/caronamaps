<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/caronas_adapter_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_item_listview"
    android:paddingBottom="2dp"
    android:paddingEnd="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingStart="2dp">

    <TextView
        android:id="@+id/partidaDestinoList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:text="Conselheiro Lafaiete/MG > Congonhas/MG > Belo Horizonte/MG > São José do Rio Preto/SP"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <View
        android:id="@+id/gapline"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_below="@id/partidaDestinoList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@android:color/darker_gray" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImagePerfil"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/gapline"
        android:layout_marginTop="2dp"
        android:paddingBottom="2dp"
        android:paddingEnd="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingStart="2dp"
        android:src="@drawable/caronacap_512"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nomeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profileImagePerfil"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/profileImagePerfil"
        android:text="Nome"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/horarioList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/profileImagePerfil"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:text="14:15h"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/vagasList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/horarioList"
        android:layout_marginEnd="20dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:text="4 vagas"
        android:textColor="@android:color/black"
        android:textSize="16sp" />


</RelativeLayout>