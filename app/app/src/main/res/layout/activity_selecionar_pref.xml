<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.dragoonssoft.apps.caronacap.SelecionarPrefActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/pref1Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_centerHorizontal="true">
            </Spinner>

            <Spinner
                android:id="@+id/pref2Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pref1Spinner"
                android:padding="20dp"
                android:layout_centerHorizontal="true">
            </Spinner>

            <Spinner
                android:id="@+id/pref3Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pref2Spinner"
                android:padding="20dp"
                android:layout_centerHorizontal="true">
            </Spinner>

            <Spinner
                android:id="@+id/pref4Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pref3Spinner"
                android:padding="20dp"
                android:layout_centerHorizontal="true">
            </Spinner>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/receberNotificationsCheckBox"
                android:text="@string/receber_notificacoes_pref"
                android:checked="true"
                android:layout_below="@+id/pref4Spinner"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/salvar_pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/receberNotificationsCheckBox"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:background="@drawable/ripple_item_listview"
                android:text="@string/salvar"
                android:textStyle="bold"
                android:textColor="@color/green_text_caronaCAP"/>
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
